<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Indigo</title>
    <link rel="stylesheet" href="style/general.css">
	<link rel="stylesheet" href="style/grid.css">
	<!-- <link rel="stylesheet" href="style/fontawesome/all.css"> -->
	<script type="text/javascript" src="scripts/Polyfills.js"></script>
	<script type="text/javascript" src="scripts/angular/angular.js" ></script>
	<script type="text/javascript" src="scripts/angular/angular-translate.min.js" ></script>
	<script type="text/javascript" src="scripts/angular/game-module.js" ></script>
	<script type="text/javascript" src="scripts/angular/translate-config.js" ></script>
	<script type="text/javascript" src="scripts/angular/language-controller.js" ></script>
	<script type="text/javascript" src="scripts/angular/authentication-service.js" ></script>
  </head>
  <body ng-app='indigo'>
	<div id="signup-container" class="grid">
		<div class="row">
			<div class="col-xs-12">
				<div ng-controller="languageController" id="language-menu">
					<a href="#" ng-click="changeLanguage('en')">English</a>
					|
					<a href="#" ng-click="changeLanguage('it')">Italiano</a>
				</div>	
			</div>
		</div>
		<form id="signup-form">
		<div class="row" ng-controller="signupController">
			<div class="col-xs-12 col-m-6" >	
				<label for="txt-user" >Username:</label>
				<input type="text" id="txt-user" ng-model="user.name">
			</div>
		</div>
		</form>
	</div>
	<p>
		<a href='/index'><- Back</a>
	</p>
  </body>
</html>